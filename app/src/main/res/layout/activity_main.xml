<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_row="0"
        android:layout_column="0"
        android:layout_columnSpan="3"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="fill_horizontal"
        android:text="Droid Desserts" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_row="1"
        android:layout_column="2"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/profile_image"
        android:layout_width="96dp"
        android:layout_height="96dp"
        app:srcCompat="@drawable/frozenyogurt"
        app:civ_border_width="2dp"
        app:civ_border_color="#FF000000"/>

    <ImageView
        android:layout_row="1"
        android:layout_column="0"
        android:id="@+id/imgDonuts"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:srcCompat="@drawable/imdonuts" />

    <ImageView
        android:layout_row="2"
        android:layout_column="0"
        android:id="@+id/imgIce"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:srcCompat="@drawable/icecreamsandwiche" />

    <ImageView
        android:layout_row="3"
        android:layout_column="0"
        android:id="@+id/imageFrozen"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:srcCompat="@drawable/frozenyogurt" />

</GridLayout>